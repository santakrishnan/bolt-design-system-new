{
  "name": "@santakrishnan/bolt-design",
  "version": "0.0.0-development",
  "private": true,
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "Santakrishnan",
    "url": "https://github.com/santakrishnan"
  },
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "registry:build": "pnpm --filter=bolt registry:build && pnpm lint:fix && pnpm format:write -- --loglevel silent",
    "registry": "turbo run registry",
    "registry:capture": "pnpm --filter=bolt registry:capture",
    "examples:build": "pnpm --filter=bolt examples:build",
    "dev": "turbo run dev --parallel",
    "bolt:dev": "pnpm --filter=bolt dev",
    "bolt:build": "pnpm --filter=bolt build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "preview": "turbo run preview",
    "typecheck": "turbo run typecheck",
    "format:write": "turbo run format:write",
    "format:check": "turbo run format:check",
    "sync:templates": "./scripts/sync-templates.sh \"templates/*\"",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "prepare": "husky",
    "release": "changeset version",
    "test:dev": "turbo run test --filter=!shadcn-ui --force",
    "test": "start-server-and-test bolt:dev http://localhost:${PORT:-4000} test:dev",
    "validate:registries": "pnpm --filter=bolt validate:registries",
    "test:apps": "pnpm --filter=bolt test:apps"
  },
  "packageManager": "pnpm@9.0.6",
  "dependencies": {
    "@babel/core": "^7.22.1",
    "@biomejs/biome": "^2.3.14",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^17.6.3",
    "@ianvs/prettier-plugin-sort-imports": "^3.7.2",
    "@manypkg/cli": "^0.20.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "autoprefixer": "^10.4.14",
    "chokidar": "^4.0.3",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.26.0",
    "eslint-config-next": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-turbo": "^1.9.9",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-tailwindcss": "3.13.1",
    "husky": "^9.1.7",
    "motion": "^12.12.1",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "puppeteer": "^23.6.0",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.1.4",
    "turbo": "^1.9.9",
    "ultracite": "^7.1.4",
    "vite": "^7.1.12",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^2.1.9"
  },
  "devDependencies": {
    "@types/hast": "^3.0.4",
    "@types/node": "^20.11.27",
    "@types/react": "^18.2.65",
    "@types/react-dom": "^18.2.22",
    "start-server-and-test": "^2.0.12",
    "typescript": "^5.5.3"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.2",
      "@types/react-dom": "19.2.2"
    }
  }
}
